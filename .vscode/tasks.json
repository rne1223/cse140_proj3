{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "command": "make",
            "args": ["run"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}